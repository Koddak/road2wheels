          <%= image_tag moto.photo , style:"height: 280px" %>
          <div class="card-trip-infos">
            <div>
              <h2><%= moto.model %></h2>
              <p><%= moto.brand %></p>
            </div>
            <h2 class="card-trip-pricing"><%= moto.price.to_i %>â‚¬/jour</h2>

            <%= image_tag moto.user.photo, class: "card-trip-user avatar-bordered" %>
          </div>
      <%end %>
    <%end %>
  </div>
</div>
