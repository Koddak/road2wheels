<h1>All our motos</h1>

<%@motos.each do |moto| %>
<div>
  <%= moto.model %>
  <%= moto.brand %>
  <%= image_tag moto.photo, alt: moto.brand %>
  <%= link_to "Show", moto_path(moto) %>
  <%= link_to "Edit", edit_moto_path(moto) %>
  <%= link_to "Delete", moto_path(moto), method: :delete, data: { confirm: "Are you sure you want to remove #{moto.brand}"}, class: 'text-danger' %>
</div>
<%end %>
<br>
<%= link_to "Submit an offer", new_moto_path %>
<br>
<%= link_to "Homepage", root_path %>
